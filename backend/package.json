{
    "name": "backend",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "start": "node src/bin/www",
        "dev": "nodemon src/bin/www",
        "test": "cross-env NODE_ENV=test jest --runInBand",
        "test:watch": "cross-env NODE_ENV=test jest --watch",
        "test:coverage": "cross-env NODE_ENV=test jest --coverage",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:seed": "prisma db seed"
    },
    "author": "",
    "license": "ISC",
    "keywords": [],
    "description": "",
    "dependencies": {
        "@prisma/client": "^5.22.0",
        "bcrypt": "^6.0.0",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "exceljs": "^4.4.0",
        "express": "^5.2.1",
        "express-rate-limit": "^7.4.0",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.3",
        "multer": "^2.0.2",
        "nodemailer": "^7.0.11",
        "pdfkit": "^0.16.0",
        "pg": "^8.16.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.37.7",
        "socket.io": "^4.7.5",
        "sqlite3": "^5.1.7",
        "node-cron": "^3.0.3",
        "winston": "^3.11.0",
        "morgan": "^1.10.0",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "jest": "^29.7.0",
        "nodemon": "^3.1.11",
        "prisma": "^5.20.0",
        "sequelize-cli": "^6.6.3",
        "supertest": "^6.3.4"
    },
    "prisma": {
        "seed": "node prisma/seed.js"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/tests/",
            "/migrations/",
            "/seeders/"
        ],
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/tests/setup.js"
        ],
        "testTimeout": 30000,
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/bin/**",
            "!src/config/**"
        ],
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 25,
                "functions": 20,
                "lines": 25,
                "statements": 25
            }
        }
    }
}
