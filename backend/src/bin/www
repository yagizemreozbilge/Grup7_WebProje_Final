#!/usr/bin/env node


/**
 * Module dependencies.
 */

// NOTE:
// We intentionally do NOT bootstrap Sequelize models here. The app uses Prisma
// for database access, and auto-connecting Sequelize was causing startup
// failures when environment variables were missing. If you need Sequelize
// migrations, run them via CLI without requiring models at runtime.
// require('../models');

// Wrap in try-catch to see startup errors
try {
  var app = require('../app.js');
} catch (err) {
  console.error('❌ Error loading app.js:', err);
  process.exit(1);
}

var debug = require('debug')('api:server');
var http = require('http');

let socketService;
try {
  socketService = require('../services/socketService');
} catch (err) {
  console.error('❌ Error loading socketService:', err);
  process.exit(1);
}

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '5000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Initialize WebSocket server
 */
try {
  socketService.initialize(server);
} catch (err) {
  console.error('❌ Error initializing socketService:', err);
  process.exit(1);
}

/**
 * Start cron jobs
 */
let cronJobs;
try {
  cronJobs = require('../jobs/cronJobs');
  cronJobs.start();
} catch (err) {
  console.error('❌ Error loading/starting cronJobs:', err);
  process.exit(1);
}

/**
 * Listen on provided port, on all network interfaces.
 */

try {
  server.listen(port);
  server.on('error', onError);
  server.on('listening', onListening);
} catch (err) {
  console.error('❌ Error starting server:', err);
  process.exit(1);
}

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
    var port = parseInt(val, 10);

    if (isNaN(port)) {
        // named pipe
        return val;
    }

    if (port >= 0) {
        // port number
        return port;
    }

    return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
    if (error.syscall !== 'listen') {
        throw error;
    }

    var bind = typeof port === 'string' ?
        'Pipe ' + port :
        'Port ' + port;

    // handle specific listen errors with friendly messages
    switch (error.code) {
        case 'EACCES':
            console.error(bind + ' requires elevated privileges');
            process.exit(1);
            break;
        case 'EADDRINUSE':
            console.error(bind + ' is already in use');
            process.exit(1);
            break;
        default:
            throw error;
    }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
    var addr = server.address();
    var bind = typeof addr === 'string' ?
        'pipe ' + addr :
        'port ' + addr.port;
    debug('Listening on ' + bind);
}